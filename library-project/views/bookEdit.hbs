<form action="/books/{{_id}}" method="POST">
  <label for="title">Title</label>
  <input type="text" value="{{title}}" name="title" id="title">
  <label for="description">Description</label>
  <input type="text" value="{{description}}" name="description" id="description">
  <label for="rating">Rating</label>
  <input type="number" value="{{rating}}" name="rating" id="rating">
  <label for="author">Author</label>
  <input type="text" value="{{author}}" name="author" id="author">
  <button type="submit">Edit the book</button>
</form>